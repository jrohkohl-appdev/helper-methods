<h1>Create New Director</h1>

<% @director.errors.full_messages.each do |message| %>
  <p style="color: red;"><%= message %></p>
<% end %>

<%= form_with(model: @director) do |form| %>
  <div>
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :dob, "Date of Birth" %>
    <%= form.date_field :dob %>
  </div>

  <div>
    <%= form.label :country_of_birth, "Country of Birth" %>
    <%= form.text_field :country_of_birth %>
  </div>

  <%= form.button %>
<% end %>